            {
              "name": "Barbell Bench Press",
              "sets": 4,
              "reps": "6-8",
              "notes": "Pause at chest, strong lockout.",
              "muscle": "Chest"
            },
            {
              "name": "Barbell Row",
              "sets": 4,
              "reps": "8-10",
              "notes": "Flat back, pull bar to ribcage.",
              "muscle": "Back"
            },
            {
              "name": "Overhead Press",
              "sets": 3,
              "reps": "8-10",
              "notes": "Keep glutes tight, no lean.",
              "muscle": "Shoulders"
            },
            {
              "name": "Incline Dumbbell Press",
              "sets": 3,
              "reps": "8-10",
              "notes": "Control on way down.",
              "muscle": "Chest"
            },
            {
              "name": "Dumbbell Curls",
              "sets": 3,
              "reps": "10-12",
              "notes": "Don’t swing weights.",
              "muscle": "Biceps"
            },
            {
              "name": "Skullcrushers",
              "sets": 3,
              "reps": "10-12",
              "notes": "Keep elbows tucked.",
              "muscle": "Triceps"
            }
          ]
        },
        {
          "day": "Day 2 - Lower",
          "type": "training",
          "exercises": [
            {
              "name": "Barbell Back Squat",
              "sets": 4,
              "reps": "6-8",
              "notes": "Parallel or deeper.",
              "muscle": "Quads"
            },
            {
              "name": "Romanian Deadlift",
              "sets": 3,
              "reps": "8-10",
              "notes": "Stretch hamstrings at bottom.",
              "muscle": "Hamstrings"
            },
            {
              "name": "Bulgarian Split Squats",
              "sets": 3,
              "reps": "10-12 each leg",
              "notes": "Drive through front heel.",
              "muscle": "Quads"
            },
            {
              "name": "Leg Press",
              "sets": 3,
              "reps": "12-15",
              "notes": "Don’t lock knees.",
              "muscle": "Quads"
            },
            {
              "name": "Standing Calf Raises",
              "sets": 3,
              "reps": "12-20",
              "notes": "Full stretch at bottom.",
              "muscle": "Calves"
            }
          ]
        }
      ]
    }
  ]
}