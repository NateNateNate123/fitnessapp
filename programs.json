{
  "programs": [
    {
      "id": "full_body",
      "name": "Full Body",
      "program_notes": [
        "Train 3x per week on non-consecutive days.",
        "Rest at least 1 day between sessions."
      ],
      "warmups": {
        "general": [
          "5-10 minutes light cardio (bike, jog, row)",
          "Dynamic stretches (arm circles, leg swings)"
        ],
        "exercise_specific": [
          "Do 1-2 lighter sets of each main lift before working sets."
        ]
      },
      "weak_points": [
        "If chest is weak: add extra set of Dumbbell Press.",
        "If back is weak: add extra set of Barbell Rows."
      ],
      "days": [
        {
          "day": "Day 1 - Full Body A",
          "type": "training",
          "exercises": [
            {
              "name": "Barbell Back Squat",
              "sets": 4,
              "reps": "6-8",
              "notes": "Focus on depth; keep core tight.",
              "muscle": "Quads"
            },
            {
              "name": "Barbell Bench Press",
              "sets": 4,
              "reps": "6-8",
              "notes": "Pause 1s at chest, explosive press.",
              "muscle": "Chest"
            },
            {
              "name": "Barbell Row",
              "sets": 4,
              "reps": "8-10",
              "notes": "Keep torso stable; no jerking.",
              "muscle": "Back"
            },
            {
              "name": "Overhead Press",
              "sets": 3,
              "reps": "8-10",
              "notes": "Full lockout overhead.",
              "muscle": "Shoulders"
            },
            {
              "name": "Barbell Curl",
              "sets": 3,
              "reps": "10-12",
              "notes": "Keep elbows tight to body.",
              "muscle": "Biceps"
            },
            {
              "name": "Skullcrushers",
              "sets": 3,
              "reps": "10-12",
              "notes": "Lower bar slowly; don’t flare elbows.",
              "muscle": "Triceps"
            }
          ]
        },
        {
          "day": "Day 2 - Full Body B",
          "type": "training",
          "exercises": [
            {
              "name": "Deadlift",
              "sets": 3,
              "reps": "5",
              "notes": "Reset each rep; neutral spine.",
              "muscle": "Back"
            },
            {
              "name": "Incline Dumbbell Press",
              "sets": 3,
              "reps": "8-10",
              "notes": "Slow eccentric; squeeze chest at top.",
              "muscle": "Chest"
            },
            {
              "name": "Pull-Ups",
              "sets": 3,
              "reps": "AMRAP",
              "notes": "Use assistance if needed for 8+ reps.",
              "muscle": "Back"
            },
            {
              "name": "Bulgarian Split Squats",
              "sets": 3,
              "reps": "10-12 each leg",
              "notes": "Keep torso upright; drive through front heel.",
              "muscle": "Quads"
            },
            {
              "name": "Lateral Raises",
              "sets": 3,
              "reps": "12-15",
              "notes": "Slight bend in elbows; control weight.",
              "muscle": "Shoulders"
            },
            {
              "name": "Hanging Leg Raises",
              "sets": 3,
              "reps": "10-15",
              "notes": "No swinging; control lower back.",
              "muscle": "Abs"
            }
          ]
        }
      ]
    },

    {
      "id": "ppl",
      "name": "Push Pull Legs",
      "program_notes": [
        "Train 6x per week: Push, Pull, Legs repeated.",
        "Rest as needed but aim for 6 sessions in 8 days."
      ],
      "warmups": {
        "general": [
          "5-10 minutes light cardio",
          "Dynamic shoulder & hip mobility"
        ],
        "exercise_specific": [
          "2 lighter sets for first compound of each day."
        ]
      },
      "weak_points": [
        "If triceps are lagging: add Rope Pushdowns after Push.",
        "If rear delts are lagging: add Face Pulls after Pull."
      ],
      "days": [
        {
          "day": "Day 1 - Push",
          "type": "training",
          "exercises": [
            {
              "name": "Barbell Bench Press",
              "sets": 4,
              "reps": "6-8",
              "notes": "Pause at chest, press explosively.",
              "muscle": "Chest"
            },
            {
              "name": "Overhead Press",
              "sets": 3,
              "reps": "8-10",
              "notes": "Keep core tight, avoid leaning back.",
              "muscle": "Shoulders"
            },
            {
              "name": "Incline Dumbbell Press",
              "sets": 3,
              "reps": "8-10",
              "notes": "Don’t let dumbbells touch at top.",
              "muscle": "Chest"
            },
            {
              "name": "Dumbbell Lateral Raises",
              "sets": 3,
              "reps": "12-15",
              "notes": "Use controlled tempo.",
              "muscle": "Shoulders"
            },
            {
              "name": "Overhead Dumbbell Extension",
              "sets": 3,
              "reps": "10-12",
              "notes": "Lower until stretch in triceps.",
              "muscle": "Triceps"
            }
          ]
        },
        {
          "day": "Day 2 - Pull",
          "type": "training",
          "exercises": [
            {
              "name": "Barbell Rows",
              "sets": 4,
              "reps": "6-8",
              "notes": "Hinge hips back; pull bar to stomach.",
              "muscle": "Back"
            },
            {
              "name": "Pull-Ups / Chin-Ups",
              "sets": 3,
              "reps": "AMRAP",
              "notes": "Alternate grip each week.",
              "muscle": "Back"
            },
            {
              "name": "Face Pulls",
              "sets": 3,
              "reps": "12-15",
              "notes": "Pull rope to forehead, elbows high.",
              "muscle": "Rear Delts"
            },
            {
              "name": "Barbell Curls",
              "sets": 3,
              "reps": "10-12",
              "notes": "Keep elbows still.",
              "muscle": "Biceps"
            }
          ]
        },
        {
          "day": "Day 3 - Legs",
          "type": "training",
          "exercises": [
            {
              "name": "Barbell Back Squat",
              "sets": 4,
              "reps": "6-8",
              "notes": "Go to parallel or deeper.",
              "muscle": "Quads"
            },
            {
              "name": "Romanian Deadlift",
              "sets": 3,
              "reps": "8-10",
              "notes": "Keep back flat, stretch hamstrings.",
              "muscle": "Hamstrings"
            },
            {
              "name": "Walking Lunges",
              "sets": 3,
              "reps": "10-12 each leg",
              "notes": "Long stride for glutes, short stride for quads.",
              "muscle": "Glutes"
            },
            {
              "name": "Leg Curls",
              "sets": 3,
              "reps": "12-15",
              "notes": "Slow eccentric phase.",
              "muscle": "Hamstrings"
            },
            {
              "name": "Standing Calf Raises",
              "sets": 3,
              "reps": "12-20",
              "notes": "Pause at top.",
              "muscle": "Calves"
            }
          ]
        }
      ]
    },

    {
